---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

const { className = '' } = Astro.props;
---

<header class={`${className} bg-gray-900 shadow-md`}>
	<nav class="flex items-center justify-between p-4">
		<h2 class="text-white text-lg">
			<a href={import.meta.env.BASE_URL} class="text-white no-underline hover:text-gray-300">{SITE_TITLE}</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href={import.meta.env.BASE_URL} class="text-white hover:text-gray-300">Home</HeaderLink>
		</div>
	</nav>
</header>
